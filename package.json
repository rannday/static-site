{
  "name": "static-site",
  "version": "0.0.1",
  "description": "Cloudflare static site",
  "homepage": "https://rannday.github.io/static-site/",
  "bugs": {
    "url": "https://github.com/rannday/static-site/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rannday/static-site.git"
  },
  "license": "Unlicense",
  "author": "Rann Day",
  "type": "module",
  "scripts": {
    "clean": "del-cli public --force",
    "css": "esbuild src/css/highlight-light.css --bundle --outfile=public/css/highlight-light.css --minify && esbuild src/css/highlight-dark.css --bundle --outfile=public/css/highlight-dark.css --minify",
    "css:watch:light": "esbuild src/css/highlight-light.css --bundle --outfile=public/css/highlight-light.css --watch",
    "css:watch:dark": "esbuild src/css/highlight-dark.css --bundle --outfile=public/css/highlight-dark.css --watch",
    "css:watch": "npm-run-all --parallel css:watch:light css:watch:dark",
    "js": "esbuild src/js/links.js --bundle --outfile=public/js/links.js --minify && esbuild src/js/highlight.js --bundle --outfile=public/js/highlight.js --minify",
    "js:watch:links": "esbuild src/js/links.js --bundle --outfile=public/js/links.js --watch",
    "js:watch:hljs": "esbuild src/js/highlight.js --bundle --outfile=public/js/highlight.js --watch",
    "js:watch": "npm-run-all --parallel js:watch:links js:watch:hljs",
    "serve": "eleventy --serve",
    "test": "npx serve public -l 8080",
    "dev": "npm-run-all --parallel css:watch js:watch serve",
    "build": "npm run clean && npm run css && npm run js && cross-env ELEVENTY_ENV=production eleventy",
    "deploy": "npm run build && wrangler pages deploy public --project-name=rannday"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "esbuild": "^0.25.8",
    "html-minifier-next": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "the-new-css-reset": "^1.11.3",
    "wrangler": "^4.25.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "lucide": "^0.525.0"
  }
}
